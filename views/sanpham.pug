doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    script(src='https://kit.fontawesome.com/1ad9241671.js' crossorigin='anonymous')
    script(src='https://cdn.tailwindcss.com')
// Nav bar
nav.bg-black.sticky.top-0
    .container.mx-auto.flex.justify-between.h-20.items-center.text-white
        .text-2xl.font-bold.text-center.align-middle.h-full MARIANA
        .flex
            .ml-6(class='hover:text-blue-400') Home
            .ml-6(class='hover:text-blue-400') Boat
            .ml-6(class='hover:text-blue-400') Yatch
            .ml-6(class='hover:text-blue-400') Blog
            .ml-6(class='hover:text-blue-400') Contact
            .ml-6(class='hover:text-blue-400')
                i.fas.fa-search
// Nav bar end
// Search query
form.border-b.border-gray-300.sticky.top-20.bg-white(action='/sanpham' method='get')
    .container.mx-auto.flex.flex-row.py-4
        .grid.grid-cols-3.gap-2.mr-1(class='basis-4/5')
            select#brand.bg-gray-100.rounded-lg.py-2.pl-2(name='origin')
                option(value='null') Select Origin
                option(value='france') France
                option(value='usa') USA
                option(value='britain') Britain
                option(value='italia') Italia
                option(value='canada') Canada
                option(value='spain') Spain
                option(value='russia') Russia
            select.bg-gray-100.rounded-lg.py-2.pl-2(name='kind' id='')
                option(value='null') Select Kind
                option(value='yatch') Yatch
                option(value='boat') Boat
            select.bg-gray-100.rounded-lg.py-2.pl-2(name='length' id='')
                option(value='volvo') Select Length
                option(value='volvo') &lt; 5m
                option(value='saab') 5m ~ 10m
                option(value='opel') 10m ~ 20m
                option(value='audi') &gt; 20m
            select.bg-gray-100.rounded-lg.py-2.pl-2(name='price' id='')
                option(value='volvo') Select Price
                option(value='volvo') &lt; 100000$
                option(value='saab') 100000$ ~ 500000$
                option(value='opel') 500000$ ~ 1000000$
                option(value='audi') &gt;1000000$
            input.border.border-gray-300.col-span-2.rounded-lg.pl-2(type='text' name='name' placeholder='Search your yatch name here')
        .ml-1(class='basis-1/5')
            button.text-white.bg-black.rounded-lg.w-full.h-full.text-3xl.font-bold(type='submit' class='hover:bg-orange-600')
                | FIND
//Search query end
// Display section
section.flex.flex-row
    .container.mx-auto
        // San pham
        .text-center.text-2xl.font-bold.py-4.font-mulish
            | FIND YOUR DESIRE YATCH HERE
        .grid.grid-cols-2.gap-2.py-2
            each yatch in yatchs
                form(action="/inform", method="post").border.border-gray-300.p-2.rounded-lg
                    input#id(type="text" name="id" value=yatch.yatch_id style="display: none")
                    input(type='image' src=yatch.yatch_img alt='Submit' class="aspect-video object-cover w-full")
                    .font-bold #{yatch.yatch_name}
                    .flex
                        .border-r.border-gray-600.pr-2 #{yatch.yatch_origin}
                        .border-r.border-gray-600.px-2 #{yatch.yatch_length}
                        .pl-2 #{yatch.yatch_price}
        // san pham end
        // Pagination
        .flex.items-center.mb-4.mt-2.justify-between
            div
                | Result from 1 to 8
            nav(aria-label='Pagination')
