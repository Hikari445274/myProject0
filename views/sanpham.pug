                        a.flex.items-center.justify-center.px-4.h-10.ml-0.leading-tight.text-gray-500.bg-white.border.border-gray-300.rounded-l-lg(href='#' class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white')
                            | Previous
                    li
                        a.flex.items-center.justify-center.px-4.h-10.leading-tight.text-gray-500.bg-white.border.border-gray-300(href='#' class='hover:bg-gray-100 hover:text-gray-700 dark:bg-blue-800 dark:border-gray-700 dark:text-blue-400 dark:hover:bg-orange-700 dark:hover:text-white')
                            | 1
                    li
                        a.flex.items-center.justify-center.px-4.h-10.leading-tight.text-gray-500.bg-white.border.border-gray-300(href='#' class='hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white')
